{
  "name": "seelabs/rippled_dogfood:1.3",
  "base_project": "rippled",
  "versions": {
    "rippled": "1.3",
    "gdb": "8.2"
  },
  "packages": {
    "apt": [
      "git",
      "ccache",
      "fonts-font-awesome",
      "fonts-ubuntu",
      "gnupg2",
      "jq",
      "libcapnp-dev",
      "manpages-dev",
      "ninja-build",
      "silversearcher-ag",
      "stow",
      "sudo",
      "tmux",
      "wmctrl",
      "zsh"
    ],
    "defcon": [
      "gdb"
    ]
  },
  "data": [
    {
      "source": {
        "repository": "https://github.com/ripple/rippled.git",
        "branch": "develop"
      },
      "target": "/opt/rippled_bld"
    },
    {
      "source": "./rippled.cfg",
      "target": "/opt/rippled/."
    },
    {
      "source": "./rippled_docker_helpers.sh",
      "target": "/opt/rippled_bld/."
    }
  ],
  "volumes": [
    "/opt/rippled"
  ],
  "mounts": {
    "volumes": [
      {
        "source": "rippled_opt",
        "target": "/opt/rippled"
      }
    ]
  },
  "run": ["/opt/rippled_bld/rippled_docker_helpers.sh build /opt/rippled_bld/rippled gcc.debug.unity"],
  "cmd": ["/opt/rippled_bld/rippled_docker_helpers.sh", "run", "/opt/rippled_bld/rippled", "gcc.debug.unity", "--conf", "/opt/rippled/rippled.cfg", "--fg"],
  "with_debugger": true,
  "ports": [
    51235
  ]
}
